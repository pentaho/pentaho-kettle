<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:pen="http://www.pentaho.com/xml/schemas/pentaho-blueprint"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           default-timeout="20000" default-activation="eager">

  <jaxrs:server address="/connection" id="browser-endpoint">
    <jaxrs:serviceBeans>
      <bean class="org.pentaho.di.connections.ui.endpoints.ConnectionEndpoints">
      <!-- TODO add spring injection for ConnectionManager.java to replace code for ConnectionEndpoints() and use ConnectionEndpoints(connectionManager)
        public ConnectionEndpoints() {
          this( ConnectionManager.getInstance() );
          this.connectionManager.setMetastoreSupplier( MetaStoreConst.getDefaultMetastoreSupplier() );
         }
      -->
      </bean>
    </jaxrs:serviceBeans>

    <jaxrs:extensionMappings>
      <entry key="json" value="application/json"/>
    </jaxrs:extensionMappings>

    <jaxrs:providers>
      <bean class="org.pentaho.di.connections.ui.endpoints.JsonProvider"/>
    </jaxrs:providers>

  </jaxrs:server>

</blueprint>
